<?xml version="1.0" encoding="UTF-8"?>
<!-- This is a copy of log4j2.xml but with levels set for production.  If you make a change here you need
     to make it there, unless you only want the change to apply in production. -->
<Configuration status="warn">

    <Properties>
        <Property name="logfile.name">${env:DTEST_HOME}/log/dtest.log</Property>
    </Properties>

    <Appenders>
        <Console name="STDERR" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{DEFAULT} %5p [%t] %c{1}: %m%n"/>
        </Console>
        <File name="File" fileName="${logfile.name}">
            <PatternLayout pattern="%d{DEFAULT} %5p [%t] %c{1}: %m%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDERR" level="info"/>
            <AppenderRef ref="File" level="info"/>
        </Root>
    </Loggers>

</Configuration>