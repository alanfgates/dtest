<?xml version="1.0" encoding="UTF-8"?>
<!-- This is the test version of the config file.  It is set to minimize the output to the console and maximize
     it in the logs.  If you intend to change log4j settings for the tool, use the instance of this file in
     main/resources instead. -->

<Configuration status="warn">

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{DEFAULT} %5p [%t] %c{1}: %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT" level="debug"/>
        </Root>
    </Loggers>

</Configuration>